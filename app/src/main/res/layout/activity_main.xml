<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity"
    >

    <ViewAnimator
        android:id="@+id/viewAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >


            <TextView
                android:id="@+id/quiz_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/intro"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quiz_intro_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="@string/intro_2"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/name_placeholder"
                android:inputType="textCapWords" />

            <Button
                android:onClick="isNameProvided"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="@string/start_quiz_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_one_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one"
                android:textColor="#000"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                />

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/q1a"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q1a" />

                <RadioButton
                    android:id="@+id/q1b"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q1b" />

                <RadioButton
                    android:id="@+id/q1c"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q1c" />

                <RadioButton
                    android:id="@+id/q1d"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q1d" />
            </RadioGroup>

            <Button
                android:id="@+id/goToSecondQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_question"
                android:layout_marginTop="40dp"
                android:layout_gravity="end"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_two_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/question_two"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/q2a"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q2a" />

                <RadioButton
                    android:id="@+id/q2b"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q2b" />

                <RadioButton
                    android:id="@+id/q2c"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q2c" />

                <RadioButton
                    android:id="@+id/q2d"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q2d" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/previous_question"
                    android:id="@+id/goBackToFirstQuestion"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/next_question"
                    android:id="@+id/goToThirdQuestion"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/question_three_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/question_three"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp" />

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/q3a"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q3a" />

                <RadioButton
                    android:id="@+id/q3b"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q3b" />

                <RadioButton
                    android:id="@+id/q3c"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q3c" />

                <RadioButton
                    android:id="@+id/q3d"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q3d" />
            </RadioGroup>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:text="@string/previous_question"
                android:id="@+id/goBackToSecondQuestion"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:text="@string/next_question"
                android:id="@+id/goToFourthQuestion" />

        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_four_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/question_four"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/overallTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="24dp"
                android:text="@string/q4a"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/goldOlympic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="24dp"
                android:text="@string/q4b"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/goldWC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="24dp"
                android:text="@string/q4c"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/silverOlympic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingLeft="24dp"
                android:text="@string/q4d"
                android:textSize="16sp" />

        </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/previous_question"
                    android:id="@+id/goBackToThirdQuestion"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/next_question"
                    android:id="@+id/goToFifthQuestion"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_five_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/question_five"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/q5a"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q5a" />

                <RadioButton
                    android:id="@+id/q5b"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q5b" />

                <RadioButton
                    android:id="@+id/q5c"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q5c" />

                <RadioButton
                    android:id="@+id/q5d"
                    style="@style/RadioButtonStyle"
                    android:text="@string/q5d" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/previous_question"
                    android:id="@+id/goBackToFourthQuestion"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/next_question"
                    android:id="@+id/goToSixthQuestion"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_six_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_six"
                android:textColor="#000"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                />

            <EditText
                android:id="@+id/q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/q6"
                android:inputType="textCapWords" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/previous_question"
                    android:id="@+id/goBackToFifthQuestion"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:text="@string/check_answers"
                    android:id="@+id/goToSummary"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/summary"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="@string/once_again_button"
                android:onClick="startAgain"/>

        </LinearLayout>

    </ViewAnimator>

</ScrollView>
